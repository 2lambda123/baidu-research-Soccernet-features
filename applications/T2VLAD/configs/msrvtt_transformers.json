{
    "inherit_from": "configs/base_config_transformers.json",
    "eval_mode": "test_run",
    "experts": {
        "modalities": [
	    "features_audio",
	    "features_rgb",
	    "features_ocr",
	    "features_speech",
	    "features_scene",
	    "features_flow",
	    "features_s3d",
	    "features_face"
        ],
        "face_dim": 512
    },
    "arch": {
        "type": "CENet",
        "args": {
            "keep_missing_modalities": false,
            "use_ce": false,
            "use_mish": 1,
            "use_bn_reason": 1,
            "num_g_layers": 3,
            "num_h_layers": 0,
            "include_self": 1,
            "l2renorm": false,
            "randomise_feats": "",
            "vlad_clusters": {
                "text": 9,
                "chen_resnet": 9,
                "detection-sem": 50
            },
            "ghost_clusters": {
                "text": 1,
                "ocr": 1,
                "features_ocr": 1,
                "features_rgb": 1,
                "features_flow": 1,
                "features_scene": 1,
                "features_s3d": 1,
                "features_audio": 1,
                "features_speech": 1,
                "features_face": 1,
                "audio": 1,
                "chen_resnet": 1,
                "speech": 1
            },
            "mimic_ce_dims": 1,
            "test_caption_mode": "indep"
        }
    },
    "data_loader": {
        "type": "ExpertDataLoader",
        "args": {
            "dataset_name": "MSRVTT",
            "data_dir": "data/MSRVTT",
            "split_name": "jsfusion",
            "batch_size": 64,
            "fuse_captions": false,
            "num_test_captions": 1,
            "max_tokens": {
		"features_ocr": 30,
		"features_face": 30,
		"features_rgb": 51,
		"features_flow": 49,
		"features_s3d": 30,
		"features_scene": 31,
		"features_speech": 112,
		"features_audio": 31,
                "ocr": 49,
                "text": 37,
                "audio": 29,
                "speech": 32,
                "openpose": 50,
                "chen_resnet": 57,
                "detection": 12,
                "detection-sem": 100
            }
        }
    },
    "loss": {
        "type": "ContrastiveLoss",
        "args": {
            "margin": 0.2,
	    "topk": 1
        }
    },
    "trainer": {
        "epochs": 150
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
		"weight_decay": 1e-4
	}
    },
    "lr_scheduler": {
	    "type": "StepDecay",
	    "args": {
             "learning_rate": 0.0001,
		     "step_size": 5,
		      "gamma": 0.9
	    }
    },
    "visualizer": {
        "args":{
            "src_video_dir": "data/MSRVTT/videos/all"
        }
    },
    "eval_settings": {
        "data_loader": {
            "args":{
                "split_name": "jsfusion",
                "num_test_captions": 1
            }
        },
        "tester": {
            "save_dir": "data/saved/",
            "verbosity": 2
        },
        "disable_gpu": false
    }
}
